<%= semantic_form_for @content_block do |f| %>
  <% if @content_block.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@content_block.errors.count, "error") %> prohibited this content_block from being saved:</h2>

      <ul>
      <% @content_block.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
<%= f.inputs do %>
	<%= f.input :heading, :input_html => { :size => 80 } %>
	<%= f.input :section_id %>
	<%= f.input :editor_id,   :as => :select,      :collection => Editor.all %>
	<%= f.input :page_order_id %>
	<div style="margin-left: 150px;">
	<%= f.input :content,  :as => :ckeditor, :input_html => { :height => 200, :width => 600 }, :label => false %> 
	</div>
	<%= f.input :editor_accessible %>
<% end %>
 	<%= f.actions do %>
	      <%= f.action :submit, :as => :button %>
	    <% end %>
<% end %>