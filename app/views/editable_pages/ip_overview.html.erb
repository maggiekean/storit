		 </div>
<%= link_to "Add content", new_content_block_path(@content_block, :section_id => "3") %> 
</div> <!-- #mainContent -->

<% content_for :javascript do %>	  
<script>
$(document).ready(function() {
		$("[rel=footnote]").inlineFootnote();
		$('#content_blocks').sortable({
		axis: 'y',
		dropOnEmpty: false,
		handle: '.handle',
		cursor: 'crosshair',
		items: 'li',
		opacity: 0.4,
		scroll: true,
		update: function(){
		$.ajax({
		type: 'post',
		data: $('#content_blocks').sortable('serialize'),
		dataType: 'script',
		complete: function(request){
		$('#content_blocks').effect('highlight');
		},
		url: '/content_blocks/sort'})
		}
		});
});
</script>
<% end %>
