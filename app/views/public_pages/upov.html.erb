			<span id="originIcon" class="ui-icon ui-icon-plusthick"></span>
			<div id="origins" style = "display: none">
		<% end %>
			stuff
			<% @content_blocks_origins.each do |c| %><li>
					<h3><%= c.heading %></h3>	
					<%= raw(c.content) %></li>
			<% end %>
		</div><!-- #origins -->
		<div class="subtopicHeading" >Main Provisions		</div>
		<% if @open_section == "provisions" %>
			<span id="provisionsIcon" class="ui-icon ui-icon-minusthick"></span>		
