			<% @content_blocks_provisions.each do |c| %><li>
					<h3><%= c.heading %></h3>	
					<%= raw(c.content) %></li>
			<% end %>
		</div>
		<div class="subtopicHeading" >Infrastructure		</div>
		<% if @open_section == "infrastructure" %>
			<span id="infrastructureIcon" class="ui-icon ui-icon-minusthick"></span>
			<div id="infrastructure">
		<% else %>
			<span id="infrastructureIcon" class="ui-icon ui-icon-plusthick"></span>
		<div id="infrastructure" style = "display: none">
			<%  end %>
			<% @content_blocks_infrastructure.each do |c| %><li>
					<h3><%= c.heading %></h3>	
					<%= raw(c.content) %></li>
			<% end %>
		</div>
			
	</div><!-- #aboutContent -->
</div> <!-- #mainContent -->
